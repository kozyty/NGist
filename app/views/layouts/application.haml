!!! Strict
%html
  %head
    %meta{:content=>'text/thml; charset=utf-8', 'http-equiv'=>'content'}
    = stylesheet_link_tag 'bootstrap.min'
    = stylesheet_link_tag 'codemirror', 'codemirror/theme/default', 'codemirror/mode/diff/diff', 'codemirror/mode/markdown/markdown', 'codemirror/mode/rst/rst'
    = stylesheet_link_tag 'application'
    = yield_content :include
    = javascript_include_tag 'codemirror', 'application'
    = favicon_tag 'favicon.ico'
    %title= [@title, "NGist"].compact.join(" | ")

%body
  .topbar
    .topbar-inner
      .container
        = link_to "NGist", url_for(:codes, :index), {:class => :brand}
        %ul.nav
          %li.active=link_to t(:home), url_for(:codes, :index)
          %li=link_to t(:add_snippet), url_for(:codes, :edit)
          %li=link_to t(:about), url_for(:about, :index)
        =form_tag url_for(:codes, :search), {:method => :get, :class => 'pull-right'} do
          = text_field_tag 'search_key', :placeholder=>t(:search), :value => @search_key
  .container
    = message_tags

  = yield

.container
  %footer
    Copyright (C) 2011
    = link_to("codefirst.org", "http://codefirst.org/") + "."
    All rights reserved.
